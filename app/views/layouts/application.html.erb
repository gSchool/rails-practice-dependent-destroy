<!DOCTYPE html>
<html>
<head>
  <title>Rails Practice Dependent Destroy</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <div class="container">
    <div class="logo">
      <%= link_to "Home", root_path %>
    </div>
    <% if current_user %>
      <div class="logout">
        <%= current_user.email %> |
        <%= link_to "Logout", signout_path %>
      </div>
    <% end %>
  </div>
</header>
<main>

  <div class="container">
    <% if flash.any? %>
      <div class="flash">
	<%= flash[:notice] %>
      </div>
    <% end  %>

    <%= yield %>
  </div>
</main>
</body>
</html>
